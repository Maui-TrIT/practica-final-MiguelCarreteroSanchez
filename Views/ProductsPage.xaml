<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShopApp.Views.ProductsPage"
             xmlns:handlers="clr-namespace:ShopApp.Handlers"
             Title="ProductsPage">
    
    
    <!--<VerticalStackLayout>
        <Label 
            Text="Welcome to product page"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    </VerticalStackLayout>-->

    <Shell.SearchHandler>
        <handlers:ProductoBusquedaHandler 
            Placeholder="BuscarProductos"
            DisplayMemberName="Nombre"
            ShowsResults="True"
            ItemTemplate="{StaticResource ProductDataTemplate}"
            />
    </Shell.SearchHandler>


    <RefreshView 
        Command="{Binding RefreshCommand}"
        IsRefreshing="{Binding IsRefreshing}">

        <CollectionView
        x:Name="products"
        SelectionMode="Single"
        ItemsSource="{Binding Products}"
        SelectedItem="{Binding ProductoSeleccionado, Mode=TwoWay}"
        ItemTemplate="{StaticResource ProductDataTemplate}"
        />
        
    </RefreshView>








</ContentPage>